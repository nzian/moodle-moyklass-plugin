{{#subscription}}
    <div class="container card bg-light position-relative">
        {{#remindsumm}}
            <span class="position-absolute translate-middle text-light badge rounded-pill bg-danger"
                             style="right: -10px; top: -8px">
                    Duty: <span class="visually-hidden">{{remindsumm}} &#8381;</span>
            </span>
        </span>
        {{/remindsumm}}

        <div class="row">
            <div class="col-md-7 card-body">
                <h5 class="card-title">{{name}} </h5>
                <h6 class="card-subtitle text-muted">{{newSellDate}} - Sum: {{price}} &#8381;</h6>
            </div>
            <div class="col-md-5 card-body">
                {{#newNextDate}}<h5 class="card-title">Next entry: {{newNextDate}}</h5>{{/newNextDate}}
                <h6 class="text-muted">{{oneClassLeft}}</h6>
                <h6 class="text-muted">Period: {{newBeginDate}} - {{newEndDate}}</h6>
                {{#totalburned}}<h6 class="text-muted">Ð¡lasses were burning: {{totalburned}}</h6>{{/totalburned}}
            </div>
        </div>

    </div>
{{/subscription}}